<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.conversorunidadesfo.dbm_mw">

    <TextView
        android:text="dBm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edit_dbm"
        android:layout_alignBottom="@+id/edit_dbm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/edit_dbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_dbm_mw"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_a_mW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_dbm"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="a mW" />

    <Button
        android:id="@+id/btn_a_dbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_a_mW"
        android:layout_alignBottom="@+id/btn_a_mW"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="A dbm" />

    <TextView
        android:id="@+id/txt_mw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_mW"
        android:layout_alignBottom="@+id/edit_mW"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="mW"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_mW"
        android:layout_below="@+id/btn_a_mW"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <!-- *********************************************  -->

    <TextView
        android:text="km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/edit_km"
        android:layout_alignBottom="@+id/edit_km"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <EditText
        android:id="@+id/edit_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_k_m"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_a_millas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_km"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="a Millas" />

    <Button
        android:id="@+id/btn_a_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_a_millas"
        android:layout_alignBottom="@+id/btn_a_millas"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="A Km" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_millas"
        android:layout_alignBottom="@+id/edit_millas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Millas"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_title_dbm_mw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conversor dBm  mW"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_title_k_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_mw"
        android:layout_marginTop="60dp"
        android:text="Conversor  Km millas"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_millas"
        android:layout_below="@+id/btn_a_millas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



</RelativeLayout>